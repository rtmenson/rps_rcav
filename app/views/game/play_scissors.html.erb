
<div class=container>

  <hr>

  <div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12">

      <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
          <a href="/rock" class="btn btn-block btn-primary">Rock</a>
        </div>
        <div class="btn-group" role="group">
          <a href="/paper" class="btn btn-block btn-primary">Paper</a>
        </div>
        <div class="btn-group" role="group">
          <a href="/scissors" class="btn btn-block btn-info">Scissors</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-4 col-md-offset-2 col-xs-6">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            Scissors
          </h2>
        </div>
        <div class="panel-body text-center">
          <i class="fa move-icon fa-hand-scissors-o fa-5x"></i>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-xs-6">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            <%= @computer_move %>
          </h2>
        </div>
        <div class="panel-body text-center">
          <i class=" <%= @outcome_image%> fa-5x"></i>
        </div>
      </div>
    </div>

  </div>

  <hr>

  <div class="row">
    <div class="well text-center">
      <h1>
        <span class="label label-<%=@outcome_color%>">
          You <%= @outcome %>
        </span>
      </h1>
    </div>
  </div>

</div>
